<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@Profile.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ProfileMenu">
    <children>
        <VBox layoutX="928.0" layoutY="209.0" prefHeight="114.0" prefWidth="98.0" spacing="2"
              stylesheets="@Profile.css">
            <children>
                <Label prefHeight="27.0" prefWidth="100.0" text="username:"/>
                <Label prefHeight="27.0" prefWidth="100.0" text="password:"/>
                <Label prefHeight="27.0" prefWidth="100.0" text="email:"/>
                <Label prefHeight="27.0" prefWidth="100.0" text="nickname:"/>
            </children>
        </VBox>
        <VBox layoutX="1032.0" layoutY="212.0" prefHeight="110.0" prefWidth="136.0" spacing="2">
            <children>
                <TextField fx:id="username"/>
                <TextField fx:id="password"/>
                <TextField fx:id="email"/>
                <TextField fx:id="nickname" prefHeight="26.0" prefWidth="136.0"/>
            </children>
        </VBox>
        <Label alignment="CENTER" layoutX="834.0" layoutY="128.0" prefHeight="56.0" prefWidth="260.0"
               text="your informations!" textAlignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <VBox layoutX="928.0" layoutY="376.0" prefHeight="98.0" prefWidth="204.0" spacing="3"
              stylesheets="@Profile.css">
            <children>
                <Label fx:id="topScoreLabel" prefHeight="30.0" prefWidth="208.0" text="top score:"/>
                <Label fx:id="rankLabel" prefHeight="30.0" prefWidth="203.0" text="rank:"/>
                <Label fx:id="totalGamesLabel" prefHeight="30.0" prefWidth="204.0" text="number of games:"/>
            </children>
        </VBox>
        <VBox layoutX="976.0" layoutY="482.0" prefHeight="66.0" prefWidth="100.0" spacing="3">
            <children>
                <Label fx:id="winLabel" prefHeight="94.0" prefWidth="100.0" text="win:"/>
                <Label fx:id="drawLabel" prefHeight="94.0" prefWidth="100.0" text="draw:"/>
                <Label fx:id="loseLabel" prefHeight="94.0" prefWidth="100.0" text="fail:"/>
            </children>
        </VBox>
        <Button layoutX="1034.0" layoutY="341.0" mnemonicParsing="false" onMouseClicked="#saveChanges" prefHeight="26.0"
                prefWidth="131.0" text="save changes"/>
        <Button layoutX="43.0" layoutY="30.0" mnemonicParsing="false" onMouseClicked="#BackToMainMenu" prefHeight="26.0"
                prefWidth="116.0" text="Back"/>
        <ScrollPane fx:id="ScrollOfHistory" layoutX="463.0" layoutY="132.0" prefHeight="455.0" prefWidth="298.0">
        </ScrollPane>
    </children>
</AnchorPane>
